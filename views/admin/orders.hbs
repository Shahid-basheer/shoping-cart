


{{#if orders}}
<div class="container" style="margin-top: 200px; ">
<table class="table table-striped" style="margin-top: 0;" >
  <thead class="thead-success" style="overflow-y: auto; overflow-x: hidden;">
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Item</th>
      <th scope="col">Tilte</th>
       <th scope="col">Price</th>
      <th scope="col">Status</th>
      <th scope="col">Quantity</th>
      <th scope="col">Address</th>
      <th scope="col">Mobile</th>
      <th scope="col">Pincode</th>
    </tr>
  </thead>
  <tbody id="myOrderTable">

      {{#each orders}}
    <tr class="bg-light">
      <td>{{@index}}</td>
      <td><img src="/product-images/{{this.product._id}}.png" style="width: 100px; height: 100px;" alt=""></td>
      <td>{{this.product.name}}</td>
       <td>RS.{{this.product.price}}</td>
      <td>{{this.status}}</td>
      <td>{{this.products.quantity}}</td>
       <td>{{this.deliveryDetails.address}}</td>
       <td>{{this.deliveryDetails.mobile}}</td>
       <td>{{this.deliveryDetails.pincode}}</td>
      {{!-- <td>
          <a href="/admin/view/products/{{this._id}}" class="btn btn-primary">View products</a>
      </td> --}}
    </tr>
    {{/each}}
   
  
  </tbody>
</table>



{{else}}
<h1 style="text-align: center; margin-top: 400px;">order is emty</h1>
{{/if}}


