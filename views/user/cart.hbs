
 


{{#if products}}
<div class="container" style="margin-top: 200px;">
<table class="table" style="margin-top: 0;" >
  <thead class="thead-success">
    <tr>
      <th scope="col">Items</th>
      <th scope="col">Tilte</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Remove</th>
    </tr>
  </thead>
  <tbody>

      {{#each products}}
    <tr class="bg-light">
      <td><img src="/product-images/{{this.product._id}}.png" alt="" style="width: 100px; height: 100px;"></td>
      <td>{{this.product.name}}</td>
      <td>RS.{{this.product.price}}</td>
    <td>
        <button onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../users._id}}',-1)"  class="cart-item-count ml-3 btn btn-primary" style="margin-right: 10px;">-</button>
       <span id="{{this.product._id}}">{{this.quantity}}</span> 
        <button onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../users._id}}',1)" class="cart-item-count btn btn-success" style="margin-left: 10px;">+</button>
    </td>

    <td><button  onclick="removeProduct('{{this.product._id}}','{{this._id}}')" id="rmv-btn" class="btn btn-danger">Remove</button></td>
    
    </tr>
    {{/each}}
   
  
  </tbody>
</table>
<hr style="border: 5px solid black; margin-top: 100px;">
<p style="text-align: center; color: #fff; background-color: green;">TOTAL: RS.<span id="total">{{totalValue}}</span></p>
<a href="/placeholder" class="btn btn-primary btn-lg " style="float: right;margin-bottom: 10%; ">Place holder</a>
</div> 

{{else}}
<h1 style="text-align: center; margin-top: 400px;">Cart is emty</h1>
{{/if}}


