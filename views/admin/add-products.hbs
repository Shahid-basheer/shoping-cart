<section style=" margin-left:20%; margin-top:210px; margin-right:20%">
    
        

<h1>Add products</h1>
<form action="/admin/add-product" method="POST" enctype="multipart/form-data">
  <div class="form-group add-product">
    <label>Name</label>
    <input type="text" name="name" class="form-control"  placeholder="Enter Name">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your item with anyone else.</small> --}}
  </div>
  <div class="form-group">
    <label >Category</label>
    <input type="text" name="category" class="form-control"placeholder="Category">
  </div>
  <div class="form-group">
    <label >Price</label>
    <input type="text" name="price" class="form-control"  placeholder="Price">
  </div>
  <div class="form-group">
    <label >Images</label>
    <input type="file" name="images" class="form-control"  placeholder="Images">
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" >
    <label class="form-check-label">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    
</section>